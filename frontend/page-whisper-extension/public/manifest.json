{
  "manifest_version": 3,
  "name": "PageWhisper",
  "version": "1.0.0",
  "description": "AI-powered page content summarizer. Get instant summaries and key insights from any webpage with one click.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "index.html",
    "default_title": "PageWhisper - Analyze Page"
  },
  
  "icons": {
    "16": "vite.svg",
    "32": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  }
}